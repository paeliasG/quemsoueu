    let currentTheme = '';
    let currentIndex = 0;

    const menuScreen = document.getElementById('menuScreen');
    const gameScreen = document.getElementById('gameScreen');
    const characterName = document.getElementById('characterName');
    const characterDesc = document.getElementById('characterDesc');
    const clickSound = document.getElementById('clickSound');
    const backButton = document.getElementById('backButton');

    function startGame(theme) {
      currentTheme = theme;
      currentIndex = 0;
      menuScreen.style.display = 'none';
      gameScreen.style.display = 'flex';
      showCharacter();
    }

    function showCharacter() {
      const list = characters[currentTheme];
      if (!list || list.length === 0) {
        characterName.textContent = 'Nenhum personagem encontrado.';
        characterDesc.textContent = '';
        return;
      }
      const char = list[currentIndex];
      characterName.textContent = char.name;
      characterDesc.textContent = char.desc;
    }

    function showNextCharacter() {
      clickSound.currentTime = 0;
      clickSound.play();

      const list = characters[currentTheme];
      if (!list) return;

      currentIndex++;
      if (currentIndex >= list.length) {
        currentIndex = 0;
      }
      showCharacter();
    }

    function backToMenu(event) {
      event.stopPropagation(); // impede o clique de ir para nextCharacter
      gameScreen.style.display = 'none';
      menuScreen.style.display = 'flex';
      currentTheme = '';
      currentIndex = 0;
    }
  </script>
